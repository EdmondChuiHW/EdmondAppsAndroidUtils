<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/ed__activity_margin_vertical"
    android:paddingLeft="@dimen/ed__activity_margin_horizontal"
    android:paddingRight="@dimen/ed__activity_margin_horizontal"
    android:paddingTop="@dimen/ed__activity_margin_vertical" >

    <FrameLayout
        android:id="@+id/ed__frame_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/ed__padding_small"
        android:layout_weight="4" />

    <FrameLayout
        android:id="@+id/ed__frame_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ed__padding_small"
        android:layout_weight="6" />

</LinearLayout>